<h2 class="d-flex justify-content-center">My Events</h2>


{{#each events as |event|}}
<div class="event-container">
    <div class="event-card mb-2 mx-auto col-4" backgroundImage:`url(${{{event.image_url}}})>
        <h4 class="">{{event.name}}</h4>
        <p>{{event.description}}</p>
        <hr>
        <p class="mb-0">Location: {{event.location}}</p>
        <p class="mb-0">Date: {{event.date}}</p>
        <p class="mb-0">Time: {{event.time}}</p>

        {{!-- create event modal --}}


        <button type="button" class="btn delete" id="delete" data-id="{{event.id}}">Delete</button>
        <br>
    </div>
    {{/each}}

    <h2 class="d-flex justify-content-center">RSVP Events</h2>

    {{#each rsvp as |rsvp|}}
    <div class="event-container">
        <div class="event-card mx-auto col-4" backgroundImage:`url(${{{rsvp.event.image_url}}})>
            <h4 class="">{{rsvp.event.name}}</h4>
            <p>{{rsvp.event.description}}</p>
            <hr>
            <p class="mb-0">Location: {{rsvp.event.location}}</p>
            <p class="mb-0">Date: {{rsvp.event.date}}</p>
            <p class="mb-0">Time: {{rsvp.event.time}}</p>
            <p class="mb-0">Created by: {{rsvp.event.user.username}}</p>
            <br>
        </div>
        {{/each}}


        <script src="js/dashboard.js"></script>