<h2>My Events</h2>


{{#each events as |event|}}
<div class="event-container">
    <div class="event-card mb-2" backgroundImage:`url(${{{event.image_url}}})>
        <h4 class="">{{event.name}}</h4>
        <p>{{event.description}}</p>
        <hr>
        <p class="mb-0">Location: {{event.location}}</p>
        <p class="mb-0">Date: {{event.date}}</p>
        <p class="mb-0">Time: {{event.time}}</p>
        <button type="button" class="btn btn-danger delete" id="delete" data-id="{{event.id}}">Delete</button>
        <br>
    </div>
    {{/each}}

    <h2>RSVP Events</h2>

    {{#each rsvp as |event|}}
    <div class="event-container">
        <div class="event-card mb-2" backgroundImage:`url(${{{event.image_url}}})>
            <h4 class="">{{rsvp.name}}</h4>
            <p>{{event.description}}</p>
            <hr>
            <p class="mb-0">Location: {{event.location}}</p>
            <p class="mb-0">Date: {{event.date}}</p>
            <p class="mb-0">Time: {{event.time}}</p>
            <p class="mb-0">Created by: {{user.username}}</p>
            <br>
        </div>
        {{/each}}

        <script src="js/dashboard.js"></script>